@inherits LayoutComponentBase
<RadzenComponents @rendermode="InteractiveServer" />

<Loading IsVisible="@showLoading" /> <!-- Add this line for the loading spinner -->

<div class="page">
    <main>
        <div class="top-row">
            <div class="col-auto">
                <a class="link-primary" href="">eST1C</a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool showLoading = false;

    // Example function to simulate loading
    protected override async Task OnInitializedAsync()
    {
        // Simulate loading delay (use this for testing)
        await Task.Delay(1000); // Remove this delay in production
        showLoading = false;
        StateHasChanged();
    }

    // Call this method to show loading spinner
    private void ShowLoading()
    {
        showLoading = true;
        StateHasChanged();
    }

    // Call this method to hide loading spinner
    private void HideLoading()
    {
        showLoading = false;
        StateHasChanged();
    }
}
