@inherits LayoutComponentBase
<RadzenComponents @rendermode="InteractiveServer" />

<Loading IsVisible="@showLoading" /> <!-- Add this line for the loading spinner -->

<div class="bb-page">
    
    <main>

        <div class="container-fluid p-2 border">
            <div class="bb-top-row px-4 d-flex justify-content-between">
                <a class="link-primary" href="/">
                    <img src="image/est1clogo_v9.png" width="150" />
                </a>
                <div class="bb-top-row px-4 d-flex justify-content-end">

                <a href="/history" target="_blank" class="align-self-center ml-3 p-2">History</a>
                <a href="/settings" target="_blank" class="align-self-center ml-3 p-2">Settings</a>
                </div>
            </div>
        </div>





        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool showLoading = false;

    // Example function to simulate loading
    protected override async Task OnInitializedAsync()
    {
        // Simulate loading delay (use this for testing)
        await Task.Delay(1000); // Remove this delay in production
        showLoading = false;
        StateHasChanged();
    }

    // Call this method to show loading spinner
    private void ShowLoading()
    {
        showLoading = true;
        StateHasChanged();
    }

    // Call this method to hide loading spinner
    private void HideLoading()
    {
        showLoading = false;
        StateHasChanged();
    }
}
