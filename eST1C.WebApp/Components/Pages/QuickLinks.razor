@page "/quick-link/{companyName}"
@inject NavigationManager NavigationManager
@rendermode InteractiveServer


<h3 class="text-primary">@companyName</h3>
<div class="d-flex justify-content-center gap-5 mt-5">


    <div class="col-sm-6 col-md-4 col-lg-3 mb-4" >
        <div class="card shadow-sm" @onclick="NavTable" style="cursor: pointer;">
            <div class="card-body d-flex justify-content-center align-items-center">
                <p class="mb-0"> Table</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card text-center shadow-sm" @onclick="NavLine" style="cursor: pointer;">
            <div class="card-body card-body d-flex justify-content-center align-items-center">
                <p class="mb-0"> Line Graph</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card text-center shadow-sm" @onclick="NavLast" style="cursor: pointer;">
            <div class="card-body card-body d-flex justify-content-center align-items-center">
                <p class="mb-0">Last Used</p>
            </div>
        </div>
    </div>

</div>

<style>
    custom-hover .card:hover  {
        background-color: #e46464; /* Example hover background color */
        transition: background-color 0.3s; /* Smooth transition */
    }
</style>
@code {
    [Parameter]
    public string? companyName { get; set; }


    private void NavTable()
    {
        NavigationManager.NavigateTo($"/smarttorque-log/{companyName}");
    }
    private void NavLast()
    {
        NavigationManager.NavigateTo($"/smarttorque-last-used/{companyName}");
    }
    private void NavLine()
    {
        NavigationManager.NavigateTo($"/line-graph/{companyName}");
    }

}
