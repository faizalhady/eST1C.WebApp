@code {
    string GetVirtualPath()
    {
        Uri baseUri = new Uri(NavManager.BaseUri);
        string baseURL = baseUri.GetComponents(UriComponents.Path, UriFormat.Unescaped);
        baseURL = "/" + baseURL;
        return baseURL;
    }
}